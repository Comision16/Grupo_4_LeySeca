<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title : 'Register' }) %>

  <body class="body__register">
    <%- include( '../partials/navbar' ) %>

    <main class="main__profile-edit">
      <div class="main__profile-section-edit">
        <h2 class="form__title">Registrate</h2>

        <form
          action=""
          class="profile-edit"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form__register-container">
            <div class="form__register-photo">
              <figure class="image_profile-edit">
                <img
                  src="/images/users/default-ley-seca.jpg"
                  alt=""
                  id="img-photo"
                />
                <input
                  type="file"
                  id="avatar"
                  name="avatar"
                  onchange="preview(event)"
                />

                <label class="label_photo" for="avatar">
                  <i class="fa-solid fa-camera"></i
                ></label>
              </figure>
            </div>

            <div class="form_profile">
              <input
                type="text"
                id="name"
                class="form__input"
                placeholder=" "
                name="name"
              />
              <label for="name" class="form__label">Nombre:</label>
              <small>
                <%= locals.errors && errors.name ? errors.name.msg : null %>
              </small>
            </div>
            <div class="form_profile">
              <input
                type="text"
                id="lastName"
                class="form__input"
                placeholder=" "
                name="lastName"
              />
              <label for="lastName" class="form__label">Apellido:</label>
              <small>
                <%= locals.errors && errors.lastName ? errors.lastName.msg :
                null %>
              </small>
            </div>
            <div class="form_profile">
              <input type="text" id="user" class="form__input" name="user" />
              <label for="user" class="form__label">Usuario:</label>
              <small>
                <%= locals.errors && errors.user ? errors.user.msg : null %>
              </small>
            </div>
            <div class="form__register-date">
              <p>Fecha de nacimiento:</p>
              <input type="date" id="date" class="register-date" name="date" />
              <small>
                <%= locals.errors && errors.date ? errors.date.msg : null %>
              </small>
            </div>
            <div class="form_profile">
              <input
                type="text"
                id="address"
                class="form__input"
                name="address"
              />

              <label for="address" class="form__label">Dirección:</label>
              <small>
                <%= locals.errors && errors.address ? errors.address.msg : null
                %>
              </small>
            </div>
            <div class="form_profile">
              <input class="form__input" type="email" id="email" name="email" />
              <label class="form__label" for="email">E-mail: </label>
              <small>
                <%= locals.errors && errors.email ? errors.email.msg : null %>
              </small>
            </div>

            <div class="form_profile">
              <input
                class="form__input"
                type="password"
                id="password"
                name="password"
              />
              <label class="form__label" for="password">Contraseña:</label>
              <small>
                <%= locals.errors && errors.password ? errors.password.msg :
                null %>
              </small>
            </div>
            <div class="form_profile">
              <input
                class="form__input"
                type="password"
                id="confirmPassword"
                name="confirmPassword"
              />
              <label class="form__label" for="confirmPassword"
                >Confirmar contraseña:</label
              >
              <small>
                <%= locals.errors && errors.confirmPassword?
                errors.confirmPassword.msg : null %>
              </small>
            </div>

            <div class="form_profile">
              <input
                class="form__input"
                type="checkbox"
                id="terminos"
                name="terms"
              />
              <label class="form__label" for="terminos"
                >Acepto los
                <a href="/terminos" target="_blank"
                  >términos y condiciones</a
                ></label
              >
              <small>
                <%= locals.errors && errors.terms ? errors.terms.msg : null %>
              </small>
            </div>

            <div class="form__register-button">
              <button type="submit" class="button" value="Guardar">
                Guardar
              </button>
              <input type="reset" class="button" value="Descartar" />
            </div>
          </div>
        </form>

        <%- include( '../partials/footer' ) %>
      </div>
    </main>

    <script>
      let preview = (event) => {
        let read_img = new FileReader();
        let id_img = document.getElementById("img-photo");

        read_img.onload = () => {
          if (read_img.readyState == 2) {
            id_img.src = read_img.result;
          }
        };
        read_img.readAsDataURL(event.target.files[0]);
      };
    </script>
  </body>
</html>
