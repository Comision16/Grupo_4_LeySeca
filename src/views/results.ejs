<%- include('./partials/head', { title : 'Resultado de búsqueda' }) %>

    <body class="home">
        <%- include('./partials/navbar') %>







            <!-- MAIN -->

            <main class="main__results">





                <div class="main__results__title">
                    <h2>
                        Resultados de la búsqueda:
                        <%= keywords %>
                    </h2>
                </div>
                <section class="home__main__section__products">
                    <% if (results.length > 0) { %>
                        <% results.forEach(({id, name, price , discount, image}) => { %>
                            <%- include('./partials/products',{
                            id, 
                            name,
                            price,
                            discount,
                            image,
                            toThousand
        
                         }) %>
                                <% }) %>
                                    <% } else { %>
                                        <div class="main__results__products">
                                            <h2>
                                                No hubo resultados para su búsqueda.
                                                <img src=" /images/logos/background-carita.webp " alt=" ">
                                            </h2>
                                        </div>
                                        <% }%>


                </section>












            </main>

            <%- include('./partials/footer') %>

    </body>

    </html>