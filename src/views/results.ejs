<%- include('./partials/head', { title : 'BUSQUEDA' }) %>

    <body class="home">
        <%- include('./partials/navbar') %>







            <!-- MAIN -->

            <main class="home__main">





                <div class="col-12">
                    <h2 class="products-title">
                        Resultados de la búsqueda:
                        <%= keywords %>
                    </h2>
                </div>
                <section class="home__main__section__products">
                    <% if (results.length > 0) { %>
                        <% results.forEach(({id, name, price , discount, image}) => { %>
                            <%- include('./partials/products',{
                            id, 
                            name,
                            price,
                            discount,
                            image,
                            toThousand
        
                         }) %>
                                <% }) %>
                                    <% } else { %>
                                        <div>
                                            <h2 class="home__main__section__products">
                                                No hay productos que coincidan con su búsqueda.
                                            </h2>
                                        </div>
                                        <% }%>


                </section>










            </main>

            <%- include('./partials/footer') %>

    </body>

    </html>